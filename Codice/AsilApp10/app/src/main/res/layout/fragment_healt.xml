<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHealthProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sezione 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_medical_measurement"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <!-- EditText disposti verticalmente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Esempio di EditText affiancati -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heartbeat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Heartbeat rate:"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_heart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/heart_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_heart_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/data_measure_heart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btn_measure_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Measure"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"/>

                    <ImageView
                        android:id="@+id/imageViewSensorLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/indicazione_sensore_png"
                        android:contentDescription="descrizione_immagine"
                        android:visibility="gone"/>

                </LinearLayout>

                <!-- Esempio di EditText affiancati -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pressure:"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_pressure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/pressure_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_pressure_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/data_measure_pressure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btn_measure_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Measure"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"/>
                </LinearLayout>

                <!-- Esempio di EditText affiancati -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diabetes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diabetes:"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_diabetes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/diabetes_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_diabetes_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/data_measure_diabetes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btn_measure_diabetes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Measure"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"/>
                </LinearLayout>

                <!-- Esempio di EditText affiancati -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/respiratory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Respiratory rate:"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_respiratory_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/respratory_rate_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t_respiratory_rate_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/data_measure_respiratory_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/info_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:text="@string/place_your_finger_on_the_top_part_of_the_phone_as_shown_in_the_picture_keep_sliding_your_finger_until_the_flashlight_turns_off_once_done_keep_your_finger_still_for_3_seconds"/>

                    <Button
                        android:id="@+id/btn_measure_respiratory_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Measure"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Bottoni disposti orizzontalmente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_share_measurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"/>

                <Button
                    android:id="@+id/btn_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measure"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"/>

                <Button
                    android:id="@+id/btn_back_measurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Back"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"/>

                <Button
                    android:id="@+id/btn_back_measurement_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Back"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Sezione 2 (replica la struttura di Sezione 1) -->
        <!-- Sezione 3 (replica la struttura di Sezione 1) -->
    </LinearLayout>
</ScrollView>

