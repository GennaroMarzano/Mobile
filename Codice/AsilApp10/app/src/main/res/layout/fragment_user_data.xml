<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Riga per Nome -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Name:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tf_name"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Cognome -->
        <TextView
            android:id="@+id/label_surname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Last name:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tl_name"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Codice Fiscale -->
        <TextView
            android:id="@+id/label_cf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Tax ID Code:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tCF"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Luogo di Nascita -->
        <TextView
            android:id="@+id/label_birth_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Birth place:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tb_place"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Data di Nascita -->
        <TextView
            android:id="@+id/label_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Date of birth"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/td_birth"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per NazionalitÃ  -->
        <TextView
            android:id="@+id/label_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nationality:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/t_nationality"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Residenza -->
        <TextView
            android:id="@+id/label_residence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Place of residence:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tp_residence"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Indirizzo -->
        <TextView
            android:id="@+id/label_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Address:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/t_address"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Numero di Telefono -->
        <TextView
            android:id="@+id/label_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Phone number:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tp_number"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Riga per Email -->
        <TextView
            android:id="@+id/label_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Email:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/t_email"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="8dp"
            android:textSize="14sp"
            android:minHeight="30dp"/>

    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <!-- Primo FrameLayout per i primi due bottoni -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_edit_data"
                android:backgroundTint="#4CAF50"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:text="Edit"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btn_back_edit"
                android:backgroundTint="#4CAF50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:visibility="gone"
                android:textColor="#FFFFFF"/>
        </FrameLayout>

        <!-- Secondo FrameLayout per gli altri due bottoni -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_logout"
                android:backgroundTint="#4CAF50"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Logout"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btn_apply_edit_data"
                android:backgroundTint="#4CAF50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:visibility="gone"
                android:textColor="#FFFFFF"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_share"
                android:backgroundTint="#4CAF50"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:text="@string/share"
                android:textColor="#FFFFFF"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
